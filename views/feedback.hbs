<DOCTYPE html>
  <html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>Document</title>
  </head>

  <body>
    <nav>
      {{!-- <h4>Node MySQL</h4> --}}
      <ul>
        <li><a href="/search">Search</a></li>
        <li><a href="/share">Share</a></li>
        <li><a href="/trips">Trips</a></li>
      </ul>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </nav>

    <div class="container mt-50">
      <!-- Main hero unit for a primary marketing message or call to action -->
      <form action="/auth/sendfeedback" method="POST">
        <fieldset>
          <legend>Feedback Form <a href="/trips" class="btn btn-secondary">Return</a>
          </legend>

          <!-- Rating -->
          <div class="control-group">
            <label class="control-label" for="feedback-comment">Rating</label>
            <div class="controls row" style="width: max-content; margin-left:auto; margin-right:auto">
              <div class="col">
                <label class="radio" style="font-size:larger"><input style="-webkit-transform: scale(2)" type="radio" style="font-size:larger" value="1"
                    name="rating" id="rating-1">
                  1<br><small></small></label>
              </div>
              <div class="col">
                <label class="radio" style="font-size:larger"><input style="-webkit-transform: scale(2)" type="radio" style="font-size:larger" value="2"
                    name="rating" id="rating-2">
                  2<br><small></small></label>
              </div>
              <div class="col">
                <label class="radio" style="font-size:larger"><input style="-webkit-transform: scale(2)" type="radio" style="font-size:larger" value="3"
                    name="rating" id="rating-3">
                  3<br><small></small></label>
              </div>
              <div class="col">
                <label class="radio" style="font-size:larger"><input style="-webkit-transform: scale(2)" type="radio" style="font-size:larger" value="4"
                    name="rating" id="rating-4">
                  4<br><small></small></label>
              </div>
              <div class="col">
                <label class="radio" style="font-size:larger"><input style="-webkit-transform: scale(2)" type="radio" style="font-size:larger" value="5"
                    name="rating" id="rating-5">
                  5<br><small></small></label>
              </div>
            </div>
          </div>

          <!-- Comments -->
          <div class="control-group mt-4">
            <label class="control-label" for="feedback-comment">Comments</label>
            <div class="controls">
              <textarea type="text" class="input-xlarge form-control" id="userEdit-drivers-license-id" name="comment"
                value={{driversLicenseId}}></textarea>
              <br><small></small>
            </div>
          </div>

          <!-- Submit button  -->
          <!--  Form Actions -->
          <div class="form-actions">
            <button type="submit" class="btn btn-secondary">Send</input>
          </div>

    </div>
    </fieldset>
    </form>
    {{#if message}}
    <h3 class="alert alert-danger mt-4">
      {{message}}
    </h3>
    {{/if}}
    </div>
  </body>

  </html>