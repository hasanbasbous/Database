<DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="/style.css">
        <title>Document</title>
    </head>

    <body>
        <nav>
            {{!-- <h4>Node MySQL</h4> --}}
            <ul>
                <li><a href="/search">Search</a></li>
                <li><a href="/share">Share</a></li>
                <li><a href="/trips">Trips</a></li>
            </ul>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </nav>

        <div class="container container-fluid">
            <header id="admin-header-driving">
                <h2>Feedbacks</h2>
                <p>Feedbacks on every ride you have driven</p>
            </header>
            <table class="table table-bordered table-hover trips">
                <thead>
                    <tr>
                        <th class="departure">Departure</th>
                        <th class="origin">Origin</th>
                        <th class="destination">Destination</th>
                        <th class="arrival_time">Time</th>
                        <th class="length_time">Length</th>
                        <th class="Rating">Rating</th>
                        <th class="comment">Comments</th>
                    </tr>
                </thead>
                <tbody>


                    {{!-- <td id="trips-driving-status" colspan="5">
                        <img id="trips-driving-loader" class="loader" src="/img/ajaxloader.gif">
                        <em id="trips-driving-msg" style="display: none;">There are no upcoming trips for which you are
                            driving.</em>
                    </td> --}}
                    {{#each results}}
                    {{!-- {{#eq "this.license" "1"}} --}}
                    <tr>
                        <td>{{dateFormat this.date "dddd MMM, D, YYYY"}}</td>
                        <td>{{this.source}}</td>
                        <td>{{this.destination}}</td>
                        <td>{{this.time}}</td>
                        <td>{{this.length}} min</td>
                        <td>{{this.rating}} </td>
                        <td>{{this.comments}}</td>
                    </tr>

                    {{/each}}



                </tbody>
            </table>




        </div>
    </body>

    </html>