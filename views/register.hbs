    <div class="container-narrow">
      <!-- Main hero unit for a primary marketing message or call to action -->
      <form class="form-horizontal well" id="register" action="/auth/register" method="post">
        <fieldset>
          <legend class="text-center">Registration Form</legend>

          <div class="row">
            <!-- First Name -->
            <div class="control-group col">
              <label class="control-label" for="register-first-name">First Name</label>
              <div class="controls">
                <input type="text" class="input-large form-control" id="register-first-name" name="fname">
                <br><small></small>
              </div>
            </div>
            <!-- Last Name -->
            <div class="control-group col">
              <label class="control-label" for="register-last-name">Last Name</label>
              <div class="controls">
                <input type="text" class="input-large form-control" id="register-last-name" name="lname">
                <br><small></small>
              </div>
            </div>
          </div>




          <!-- Email Address -->
          <div class="control-group">
            <label class="control-label" for="register-email">Email Address</label>
            <div class="controls">
              <input type="text" class="input-xlarge form-control" id="register-email" name="email">
              <br><small></small>
            </div>
          </div>

          <div class="row">
            <!--  Password -->
            <div class="control-group col">
              <label class="control-label" for="register-password">Password</label>
              <div class="controls">
                <input type="password" class="input-medium form-control" id="register-password" name="password">
                <br><small></small>
              </div>
            </div>

            <!--  Repeat Password -->
            <div class="control-group col">
              <label class="control-label" for="register-repeat-password">Repeat Password</label>
              <div class="controls">
                <input type="password" class="input-medium form-control" id="register-repeat-password"
                  name="passwordConfirm">
                <br><small></small>
              </div>
            </div>
          </div>


          <!--  Phone Number -->
          <div class="control-group">
            <label class="control-label" for="register-phone-number">Phone Number</label>
            <div class="controls">
              <input type="text" class="input-xlarge form-control" id="register-phone-number" name="phoneNumber">
              <br><small></small>
            </div>
          </div>

          <!-- Driver's License ID -->
          <div class="control-group">
            <label class="control-label" for="register-drivers-license-id">Driver's License ID</label>
            <div class="controls">
              <input type="text" class="input-xlarge form-control" id="register-drivers-license-id"
                name="driversLicenseId">
              <br><small></small>
            </div>
          </div>

          <!--  Gender -->
          <div class="control-group text-center">
            <label class="control-label" for="register-gender">Gender</label>
            <div class="controls">
              <label class="radio">
                <input type="radio" value="male" name="gender" id="register-male">Male</label>
              <label class="radio"><input type="radio" value="female" name="gender"
                  id="register-female">Female<br><small></small></label>

            </div>
          </div>

          <!-- Submit button  -->

          <!--  Form Actions -->
          <div class="form-actions text-center mt-2">
            <button type="submit" class="btn btn-primary" id="submitBtn"> Submit</button>
            <button type="reset" class="btn">Cancel</button>
          </div>
        </fieldset>
      </form>
      {{#if message}}
      <h4 class="alert alert-danger mt-4">{{message}}</h4>
      {{/if}}
    </div>

