    </nav>

    <div class="container-narrow">
        <!-- Main hero unit for a primary marketing message or call to action -->
        <form class="form-horizontal well" id="car" action="/auth/car" method="post"  >
          <fieldset>
            <legend>Car Information Form</legend>
            
            <!-- Plate Number -->
            <div class="control-group">
              <label class="control-label" for="car-plate-num">Plate Number format (Letter + Numbers)</label>
              <div class="controls">
                <input type="text" class="form-control input-large" id="car-plate-num" name="plateNum">
                <br><small></small>
              </div>
            </div>
            
            <!-- Car Brand -->
            <div class="control-group dropdown show">
              <label class=" control-label" for="car-brand">Car Brand</label>
              <div class="controls">
                <select type="text" class=" form-control input-large" id="car-brand" name="carBrand">
                  <option value="None">None</option>
                  <option value="BMW">BMW</option>
                  <option value="Daewoo">Daewoo</option>
                  <option value="Ford">Ford</option>
                  <option value="Holden">Holden</option>
                  <option value="Honda">Honda</option>
                  <option value="Hyndai">Hyundai</option>
                  <option value="Mercedes">Mercedes</option>
                  <option value="Kia">Kia</option>
                  <option value="Lexus">Lexus</option>
                  <option value="Mazda">Mazda</option>
                  <option value="Mitsubishi">Mitsubishi</option>
                  <option value="Nissan">Nissan</option>
                  <option value="Peaugeot">Peugeot</option>
                  <option value="Subaru">Subaru</option>
                  <option value="Suzuki">Suzuki</option>
                  <option value="Toyota">Toyota</option>
                  <option value="Volkswagen">Volkswagen</option>
                </select>
                <br><small></small>
              </div>
            </div>
            

            <!-- Car Year -->
            <div class="control-group dropdown show">
              <label class="control-label ml-7" for="car-year">Car Year</label>
              <div class="controls">
                <select class="form-control input-xlarge" id="car-year" name="year"></select>
                <br><small></small>
              </div>
            </div>
            
            <script type="text/javascript">
                window.onload = function () {
                    //Reference the DropDownList.
                    var ddlYears = document.getElementById("car-year");
            
                    //Determine the Current Year.
                    var currentYear = (new Date()).getFullYear();
            
                    //Loop and add the Year values to DropDownList.
                    for (var i = 9999; i >= 1950; i--) {
                        var option = document.createElement("OPTION");
                        if (i == 9999){
                          option.innerHTML = 'None';
                          option.value = 'None';
                          i = currentYear;
                        }else {
                          option.innerHTML = i;
                          option.value = i;
                        }
                        
                        ddlYears.appendChild(option);
                    }
                };
            </script>
            <!--  Car Color -->
            <div class="control-group">
              <label class="control-label" for="car-color">Car Color</label>
              <div class="controls">
                <select  class="form-control input-medium" id="car-color" name="carColor">
                  <option value="None">None</option>
                  <option value="Blue" style="background-color: blue">Blue</option>
                  <option value="Red"  style="background-color: rgb(255, 0, 0)">Red</option>
                  <option value="Green"  style="background-color: rgb(0, 255, 34)">Green</option>
                  <option value="Grey"  style="background-color: rgb(112, 117, 113)">Grey</option>
                  <option value="Yellow"  style="background-color: rgb(222, 255, 36)">Yellow</option>
                  <option value="Black"  style="background-color: rgb(0, 0, 0)">Black</option>
                  <option value="White"  style="background-color: rgb(255, 255, 255)">White</option>
                </select>
                <br><small></small>
              </div>
            </div>
          
            <!-- Submit button  -->
             
            <!--  Form Actions -->
            <div class="form-actions">
              <button type="submit" class="btn btn-secondary mt-4" id="submitBtn">Submit</button>
              <a href="/" class="btn mt-4">Skip</a>
            </div>
          </fieldset>
        </form>
        {{#if message}}
                <h6 class="alert alert-danger mt-1">{{message}}</h6>
        {{/if}}
    </div>
  
