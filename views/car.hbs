    <div class="container-narrow">
        <!-- Main hero unit for a primary marketing message or call to action -->
        <form class="form-horizontal well" id="car" action="/auth/car" method="post"  >
          <fieldset>
            <legend>Car Information Form</legend>
            
            <!-- Plate Number -->
            <div class="control-group">
              <label class="control-label" for="car-plate-num">Plate Number format (Letter + Numbers)</label>
              <div class="controls">
                <input type="text" class="input-large" id="car-plate-num" name="plateNum">
                <br><small></small>
              </div>
            </div>
            
            <!-- Car Brand -->
            <div class="control-group">
              <label class="control-label" for="car-brand">Car Brand</label>
              <div class="controls">
                <input type="text" class="input-large" id="car-brand" name="carBrand">
                <br><small></small>
              </div>
            </div>
            
            <!-- Car Model -->
            <div class="control-group">
              <label class="control-label" for="car-model">Car Model</label>
              <div class="controls">
                <input type="text" class="input-xlarge" id="car-model" name="model">
                <br><small></small>
              </div>
            </div>

            <!-- Car Year -->
            <div class="control-group dropdown show">
              <label class="control-label ml-4" for="car-year">Car Year</label>
              <div class="controls">
                <select type="month" class="input-xlarge" id="car-year" name="year"></select>
                <br><small></small>
              </div>
            </div>
            
            <script type="text/javascript">
                window.onload = function () {
                    //Reference the DropDownList.
                    var ddlYears = document.getElementById("car-year");
            
                    //Determine the Current Year.
                    var currentYear = (new Date()).getFullYear();
            
                    //Loop and add the Year values to DropDownList.
                    for (var i = currentYear; i >= 1950; i--) {
                        var option = document.createElement("OPTION");
                        option.innerHTML = i;
                        option.value = i;
                        ddlYears.appendChild(option);
                    }
                };
            </script>
            <!--  Car Color -->
            <div class="control-group">
              <label class="control-label" for="car-color">Car Color</label>
              <div class="controls">
                <input type="Car Color" class="input-medium" id="car-color" name="carColor">
                <br><small></small>
              </div>
            </div>
          
            <!-- Submit button  -->
             
            <!--  Form Actions -->
            <div class="form-actions">
              <button type="submit" class="btn btn-secondary mt-4" id="submitBtn">Submit</button>
              <button type="reset" class="btn mt-4">Cancel</button>
            </div>
          </fieldset>
        </form>
        {{#if message}}
                <h6 class="alert alert-danger mt-1">{{message}}</h6>
        {{/if}}
    </div>
  
